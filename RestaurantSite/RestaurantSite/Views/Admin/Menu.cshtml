@model List<RestaurantSite.Models.Entity.TBLMENU>
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #333;
        color: #ddd;
        margin: 0;
        padding: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table, .table th, .table td {
            border: 1px solid #555;
        }

            .table th, .table td {
                text-align: left;
                padding: 8px;
            }

            .table th {
                background-color: #555;
            }

            .table tr:nth-child(even) {
                background-color: #444;
            }

    .btn {
        text-decoration: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
    }

    .btn-danger {
        background-color: #d9534f;
    }

    .btn-success {
        background-color: #5cb85c;
    }
</style>
<table class="table table-bordered" style="color:white;">
    <tr>
        <th>ID</th>
        <th>BURGER ADI</th>
        <th>FİYAT</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <th>@menu.BurgerID</th>
                <th>@menu.BurgerAd</th>
                <th>@menu.BurgerFiyat</th>
                
                <th><a href="/Admin/MenuSil/@menu.BurgerID" class="btn btn-outline-danger">SİL</a></th>
                <th><a href="/Admin/MenuGuncelle/@menu.BurgerID" class="btn btn-outline-info">GÜNCELLE</a></th>

            </tr>
        }
    </tbody>

</table>
<a href="#" class="btn btn-outline-info">BURGER EKLE</a>

