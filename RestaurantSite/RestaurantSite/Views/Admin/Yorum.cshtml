@model List<RestaurantSite.Models.Entity.TBLYORUMLAR>
@{
    ViewBag.Title = "Yorum";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #333;
        color: #ddd;
        margin: 0;
        padding: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table, .table th, .table td {
            border: 1px solid #555;
        }

            .table th, .table td {
                text-align: left;
                padding: 8px;
            }

            .table th {
                background-color: #555;
            }

            .table tr:nth-child(even) {
                background-color: #444;
            }

    .btn {
        text-decoration: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
    }

    .btn-danger {
        background-color: #d9534f;
    }

    .btn-success {
        background-color: #5cb85c;
    }
</style>
<table class="table table-bordered" style="color:white;">
    <tr>
        <th>ID</th>
        <th>AD SOYAD</th>
        <th>E-MAİL</th>
        <th>METİN</th>
        <th>SİL</th>
        <th>ONAYLA</th>

    </tr>
    <tbody>
        @foreach (var yorum in Model)
        {
            <tr>
                <th>@yorum.YorumID</th>
                <th>@yorum.YorumAdSoyad</th>
                <th>@yorum.Email</th>
                <th>@yorum.YorumText</th>
                <th><a href="/Admin/YorumSil/@yorum.YorumID" class="btn btn-outline-warning">SİL</a></th>
                <th><a href="/Admin/onayver/@yorum.YorumID" class="btn btn-outline-success">ONAYLA</a></th>

            </tr>
        }
    </tbody>

</table>


