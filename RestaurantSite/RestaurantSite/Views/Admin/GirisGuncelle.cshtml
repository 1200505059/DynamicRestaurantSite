@model RestaurantSite.Models.Entity.TBLGİRİS
@{
    ViewBag.Title = "GirisGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="card-form" method="post" style="max-width: 1200px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px;">
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardID" style="font-weight: bold;">ID</label>
        <input type="text" class="form-control" id="CardID" name="GirisID" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.GirisID">
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardID" style="font-weight: bold;">ID</label>
        <input type="text" class="form-control" id="CardID" name="GirisBaslik" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.GirisBaslik">
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardID" style="font-weight: bold;">ID</label>
        <input type="text" class="form-control" id="CardID" name="GirisImageURL" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.GirisImageURL">
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardID" style="font-weight: bold;">ID</label>
        <input type="text" class="form-control" id="CardID" name="GirisTelefon" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.GirisTelefon">
    </div>
    <div class="form-group" style="margin-top: 15px;">
        <button type="submit" class="btn btn-warning" style="padding: 10px 20px; border: none; border-radius: 5px; background-color: #ffc107; color: #fff; cursor: pointer;">GÜNCELLE</button>
    </div>

</form>



