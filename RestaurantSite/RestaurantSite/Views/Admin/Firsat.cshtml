
@model List<RestaurantSite.Models.Entity.TBLFIRSAT>
@{
    ViewBag.Title = "Firsat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #333;
        color: #ddd;
        margin: 0;
        padding: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table, .table th, .table td {
            border: 1px solid #555;
        }

            .table th, .table td {
                text-align: left;
                padding: 8px;
            }

            .table th {
                background-color: #555;
            }

            .table tr:nth-child(even) {
                background-color: #444;
            }

    .btn {
        text-decoration: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
    }

    .btn-danger {
        background-color: #d9534f;
    }

    .btn-success {
        background-color: #5cb85c;
    }
</style>
<table class="table table-bordered" style="color:white;">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>FİYAT</th>
        <th>AÇIKLAMA1</th>
        <th>AÇIKLAMA2</th>
        <th>AÇIKLAMA3</th>
        <th>RENK</th>
       

        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    <tbody>
        @foreach (var firsat in Model)
        {
            
            <tr>
                <th>@firsat.FirsatID</th>
                <th>@firsat.FirsatBaslik</th>
                <th>@firsat.FirsatFiyat</th>
                <th>@firsat.FirsatAciklama1</th>
                <th>@firsat.FirsatAciklama2</th>
                <th>@firsat.FirsatAciklama3</th>
                <th>@firsat.Renk</th>

                <th><a href="/Admin/FirsatSil/@firsat.FirsatID" class="btn btn-outline-danger">SİL</a></th>
                <th><a href="/Admin/FirsatGuncelle/@firsat.FirsatID" class="btn btn-outline-success">GÜNCELLE</a></th>

            </tr>
        }
    </tbody>

</table>
<a href="/Admin/FirsatEkle" class="btn btn-outline-info">FIRSAT EKLE</a>



